[Unit]
Description=arrowhead-authorization
After=network.target mysql.target arrowhead-serviceregistry-sql.target

[Service]
WorkingDirectory=/etc/arrowhead/authorization
ExecStart=/usr/bin/java --add-modules java.xml.bind -jar /usr/share/arrowhead/systems/arrowhead-authorization-4.0.jar -d -daemon -tls
Type=simple
User=arrowhead
Group=arrowhead

[Install]
WantedBy=default.target
